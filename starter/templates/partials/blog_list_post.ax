<section class="blog-list">
{{#each posts}}
<article class="card">
<a href="/blog/{{slug}}.html"><img src="{{image}}" alt="image {{title}}" class="card-image"></a>
<div class="card-content">
<h2 class="card-title"><a href="/blog/{{slug}}.html">{{title}}</a></h2>
<p class="card-desc">{{description}}</p>
<a href="/blog/{{slug}}.html" class="card-readmore">Read {{title}}</a>
</div>
</article>
{{/each}}
</section>